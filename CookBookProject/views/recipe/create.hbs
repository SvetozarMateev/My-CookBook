<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/recipe/create">
            <fieldset>
                <legend><span class="new-recipe">New Recipe</span> </legend>

                <div class="form-group">
                    <span class="col-sm-4 control-label" for="articleTitle"><span class="input-param">Recipe Title</span> </span></label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Recipe Title" name="title" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent"><span class="input-param">Content</span> </label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="content" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="recipeIngredients"><span class="input-param">Ingredients</span> </label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="recipeIngredients" rows="5" name="ingredients" required></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <button type="reset" class="btn btn-default">Cancel</button>

                        <button type="submit" class="btn btn-primary" style="background-color:darkred;border-color: darkred">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
