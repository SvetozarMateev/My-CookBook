<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/recipe/edit/{{id}}">
            <fieldset>
                <legend>Edit Recipe</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleTitle"><span class="input-param">Recipe Title</span></label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Article Title" value="{{title}}" name="title" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent"><span class="input-param">Method</span></label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="content" required>{{content}}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="recipeIngredients"><span class="input-param">Ingredients</span></label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="recipeIngredients" rows="5" name="ingredients" required>{{ingredients}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="/" class="btn btn-default">Cancel</a>

                        <button type="submit" href="/article/edit/{{id}}" class="btn btn-success">Edit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
